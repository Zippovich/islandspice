/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
?>
<div class="box base-mini mini-cart">
    <?php $_cartQty = $this->getSummaryCount() ?>
		
	<?php if ($_cartQty>0): ?>
		<div style="padding-top: 5px">
		<?php if ($_cartQty==1): ?>
			<?php echo $this->__('<span class="mc-qty">1</span> product in your cart') ?>
		<?php else: ?>
			<?php echo $this->__('<span class="mc-qty">%s</span> products in your cart', $_cartQty) ?>
		<?php endif ?>
		</div>

		<?php if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
		<div class="actions">
			<a href="<?php echo $this->getUrl('checkout/cart'); ?>" title="<?php echo $this->__('Edit Cart') ?>"><?php echo $this->__('Edit') ?></a> | <a href="<?php echo $this->getCheckoutUrl() ?>" title="<?php echo $this->__('Checkout') ?>"><?php echo $this->__('Checkout') ?></a>
		</div>
		<?php endif ?>

    <?php else: ?>
    <div style="line-height: 39px"><?php echo $this->__('Your cart is empty') ?></div>
    <?php endif ?>
</div>
<!-- [ends] .cart-sidebar // -->